<form bindsubmit="form_RepairSubmit">
  <view class="input-area">

  <view class="input-log">  
    <view class="pickerTitle my_text">请仔细填写报修信息</view>
  </view> 

  <!-- <view class="input-log">  
    <view class="pickerTitle margin_style">登录名: </view>
    <input disabled="{{true}}" class="inputIndexText" type="text" value="{{userId_value}}"/>
  </view>  -->

  <view class="input-log">  
    <view class="pickerTitle margin_style">联系人: </view>
    <input class="inputIndexText" id="contact" name="contact" type="text"/>
  </view> 

  <view class="input-log">  
    <view class="pickerTitle margin_style">联系电话: </view>
    <input class="inputIndexText" id="phone" name="phone" type="text"/>
  </view> 

  <view class="input-log" >
    <view class="pickerTitle margin_style">选择报修问题: </view>
		<picker mode ="selector" id="repairType" name="repairType" class="pickerIndexText" bindchange="bindrepairTypePickerChange_" value="{{repairTypeArray[repairTypeIndex]}}" range="{{repairTypeArray}}">
		<view class="subtitle-label">{{repairTypeArray[repairTypeIndex]}}</view>
		</picker>
  </view>

  <view class="input-log">
    <view class="pickerTitle margin_style"> 
      <picker id="deliveryDate" name="deliveryDate" mode="date" value="{{date}}" start="2017-09-01" end="2017-12-31" bindchange="bindDateChange">
         <view class="subtitle-label">
            预约报修日期：{{date}}
          </view>
      </picker>
    </view>
  </view>

  <view class="input-log">
    <view class="pickerTitle margin_style"> 
      <picker id="deliveryTime" name="deliveryTime" mode="time" value="{{time}}" start="09:01" end="19:00" bindchange="bindTimeChange">
         <view class="subtitle-label">
            预约报修时间：{{time}}
          </view>
      </picker>
    </view>
  </view>

  <view class="input-log">  
    <view class="pickerTitle margin_style">报修内容: </view>
    <input class="inputIndexText" id="note" name="note" maxlength='140' type="text"/>
  </view>


  <view style="margin-top:40px;" class="section">
   <button disabled="{{submitDisabled}}" style="background-color:{{submitBtnBgBgColor}};width: 80%;" formType="submit"  loading="{{btnLoading}}"> {{submitBtnTxt}} 
    </button>
  </view>
  
 </view>
</form>