<form bindsubmit="form_RepairSubmit">

<view class="repair_area">
  <view style="padding-top:15px;" class="section mySection">
    <text class="my_text">请仔细填写报修信息</text>
  </view>
  
  <view style="background-color:white" class="section mySection">
      <view class="flex-row" style="display:inline-flex;flex-direction:row;flex-wrap:nowrap">
    <view class="flex-item flex_text">*姓名</view>
    <view class="flex-item myInput"> 
      <input id="userName" name="userName" maxlength='20' type="text" placeholder="您的姓名"/>
    </view>
  </view>
  </view>

  <view style="background-color:white"  class="section mySection ">
    <view class="flex-row" style="display:inline-flex;flex-direction:row;flex-wrap:nowrap">
      <view class="flex-item flex_text">*电话
    </view>
      <view class="flex-item myInput"> 
      <input id="userTel" name="userTel" maxlength='11' type="text" placeholder="您的电话"/>
      </view>
    </view>
  </view>

  <view style="background-color:white" class="section mySection">
    <view class="flex-row" style="display:inline-flex;flex-direction:row;flex-wrap:nowrap">
      <view class="flex-item mypicker"> 
        <picker id="repairProblem" name="repairProblem" bindchange="bindPickerChange" value="{{array[index]}}" range="{{array}}">
          <view>
           *类型    {{array[index]}}
          </view>
        </picker>
      </view>
    </view>
  </view>

  <view style="background-color:white;height:240rpx;"  class="section mySection ">
    <view class="flex-row" style="display:inline-flex;flex-direction:row;flex-wrap:nowrap">
      <view class="flex-item flex_text">*详情
      </view>
      <view class="flex-item myInput"> 
        <textarea id="note" name="note" maxlength='100' type="text" style="width: 400rpx;height:240rpx;margin-top:-5px;" placeholder="请输入报修详细信息"/>
      </view>
    </view>
  </view>
</view>

  <view style="margin-top:40px;" class="section">
   <button disabled="{{submitDisabled}}" style="background-color:{{submitBtnBgBgColor}};width: 80%;" formType="submit"  loading="{{btnLoading}}"> {{submitBtnTxt}} 
    </button>


  
  </view>

  </form>