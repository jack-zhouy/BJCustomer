<!-- checkout.wxml -->
<!-- 地址选择 -->
<view class="container">
	<view class="address-container">
		<!-- 用户尚未添加地址时 -->
		<view class="address" bindtap="selectAddress" wx:if="{{!address}}">
			<image src="/images/location.png" class="location" />
			<view class="title">添加收货地址</view>
			<view class="arrow"></view>
		</view>
		<!-- 用户已添加过地址 -->
		<view class="item" wx:else>
			<image src="/images/location.png" class="location" />
			<view class="bd" bindtap="selectAddress">
				<view class="receiver">
					<view class="firstname">{{AddressData.userName}}</view>
					<view class="mobile">{{AddressData.telNumber}}</view>
				</view>
        <view class="receiver">
        <view class="detail">{{AddressData.provinceName}}</view>
        <view class="detail">{{AddressData.cityName}}</view>
        <view class="detail">{{AddressData.countyName}}</view>  
        </view>
        <view class="detail">{{AddressData.detailInfo}}</view>
			</view>
			<view class="arrow"></view>
		</view>
		<image src="/images/mail.png" class="mail" mode="widthFix" />
	</view>
	<!-- 支付方式 -->
	<!-- 在线支付与货到付款 -->
	<!-- 商品清单 -->
	<view class="info">
		<!-- 店铺信息 -->
		<view class="header">
			<image src="{{'/images/cart.png'}}" class="logo" />
		</view>
		<!-- 清单 -->
		<view class="list">
			<view class="item" wx:for="{{carts}}" wx:key="">
				<view class="title">{{item.goodName}}</view>
				<view class="quantity">{{item.quantity}}</view>
				<view class="price">{{item.price}}</view>
			</view>

		</view>
		<!-- 配送费 -->
		<view class="item">
			<view class="express-label">配送费</view>
			<view class="express-fee">0</view>
		</view>
		<!-- 总计 -->
		<view class="item">
			<view class="amount">{{total}}</view>
		</view>
	</view>
	<!-- 备注信息 -->
	<view class="remark">
		<view class="item disperse">
			<!-- <view class="title-label">用户人数</view>
				<picker bindchange="bindPickerChange" value="{{personCountIndex}}" range="{{personCountArray}}">
					<view class="subtitle-label">{{personCountArray[personCountIndex]}}</view>
				</picker>
			<view class="arrow"></view> -->
		</view>
		<view class="item disperse" bindtap="naviToRemark">
			<view class="title-label">订单备注</view>
			<view class="subtitle-label remark-title">{{remark ? remark : '楼层、配送时间等'}}</view>
			<view class="arrow"></view>
		</view>
	</view>
</view>
<!-- 提交订单 -->
<view class="footer">
	<view class="payment">{{total}}</view>
	<view class="checkout" bindtap="payment">提交订单</view>
</view>