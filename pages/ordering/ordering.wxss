/*菜品列表容器*/
.food-container {
	width: 100%;
	/*box-sizing: border-box;*/
	margin-left: 10px;
}

/*菜品列表*/
.food-item {
	display: flex;
	flex-direction: row;
	padding: 5px 0;
	background: white;
	border-bottom: 1px solid #f1f1f1;
}

/*主图容器*/
.food-hd {
	width: 30%;
}

/*主图*/
.thumb {
	width: 60px;
	height: 60px;
	margin-left: 10px;
	margin-right: 10px;
	margin-top: 5px;
	display: inline-table;
}

/*商品信息*/
.food-bd {
	width: 70%;
	margin-left: 10px;
}

/*菜名*/
.title {
	font-weight: bold;
	font-size: 16px;
	padding: 4px 0;
	color: #333;
	margin-left: 0;
}
.title1{
	font-weight: bold;
	font-size: 16px;
	padding: 4px 0;
	color: #333;
}

/*简述*/
.summary {
	padding: 4px 4px 4px 0;
	font-size: 12px;
	color: #9e9e9e;

}

/*价格与数量加减器*/
.price-stepper {
	padding: 4px 0;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

/*价格*/
.price {
	flex: 1;
	font-size: 18px;
	color: #ff6000;
}

/*人民币符号*/
.price:before {
	content: "￥";
	font-size: 14px;
}

/*加减器*/
.stepper {
	flex: 1;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	align-items: center;
	padding-right: 5px;
}

/*加号*/
.symbol {
	width: 30px;
	height: 30px;
	margin: 0 10px;
}

/*数量*/
.value {
	font-size: 14px;
}